<configuration>
  <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
  <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <charset>UTF-8</charset> 
      <pattern>
        <!--Date-->%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} <!--Log level--> %clr(%5p) <!--Thread--> %clr(---){faint} %clr([%15.15t]){faint} <!--Logger-->%clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wex
      </pattern>
    </encoder>
  </appender>

  <logger name="grails.app.init">
    <level value="DEBUG" />
  </logger>

  <logger name="grails.app.controllers">
    <level value="DEBUG" />
  </logger>

  <logger name="grails.app.domains">
    <level value="DEBUG" />
  </logger>

  <logger name="grails.app.jobs">
    <level value="DEBUG" />
  </logger>

  <logger name="grails.app.services">
    <level value="DEBUG" />
  </logger>

  <logger name="com.k_int">
    <level value="DEBUG" />
  </logger>

  <logger name="pubskb">
    <level value="DEBUG" />
  </logger>

  <logger name="okapi">
    <level value="INFO" />
  </logger>

  <logger name="folio">
    <level value="DEBUG" />
  </logger>

  <logger name="org.olf">
    <level value="DEBUG" />
  </logger>

  <logger name="com.k_int.okapi.springsecurity"> <level value="DEBUG" /> </logger>
  <logger name="com.k_int.okapi.OkapiTenantAdminService"> <level value="DEBUG" /> </logger>
  <logger name="com.k_int.okapi.OkapiSchemaHandler"> <level value="DEBUG" /> </logger>
  <logger name="com.k_int.web.toolkit"> <level value="DEBUG" /> </logger>
  <logger name="org.grails.gorm.graphql"> <level value="WARN" /> </logger>
  <logger name="mod.directory"> <level value="INFO" /> </logger>
  <logger name="com.k_int.okapi"> <level value="DEBUG" /> </logger>
  <logger name="com.k_int.okapi.OkapiClient"> <level value="DEBUG" /> </logger>
  <logger name="org.springframework.security"> <level value="DEBUG" /> </logger>
  <logger name="grails.plugin.springsecurity"> <level value="DEBUG" /> </logger>
  <logger name="mod.service.interaction"> <level value="DEBUG" /> </logger>


